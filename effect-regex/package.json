{
  "name": "effect-regex",
  "version": "0.5.0",
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "description": "Type-safe, composable regex builder for TypeScript using Effect. Build patterns with a fluent API that compiles to multiple dialects (JS, RE2, PCRE).",
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulJPhilp/effect-regex"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "keywords": [
    "regex",
    "regexp",
    "pattern",
    "builder",
    "effect",
    "typescript",
    "type-safe",
    "ast",
    "fluent-api",
    "re2",
    "pcre",
    "mcp",
    "model-context-protocol",
    "security",
    "validation",
    "capture-groups",
    "backreferences",
    "lookahead",
    "lookbehind"
  ],
  "author": "Paul J. Philip",
  "homepage": "https://github.com/PaulJPhilp/effect-regex#readme",
  "bugs": {
    "url": "https://github.com/PaulJPhilp/effect-regex/issues"
  },
  "scripts": {
    "build": "tsup && pnpm copy-package-json",
    "build:ts": "tsup",
    "build:mcp": "pnpm build",
    "clean": "rimraf dist/*",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "copy-package-json": "tsx scripts/copy-package-json.ts",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm vitest && changeset publish",
    "mcp:dev": "tsx src/mcp/server.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.8",
    "@effect/cli": "^0.69.0",
    "@effect/language-service": "latest",
    "@effect/platform": "^0.90.3",
    "@effect/platform-node": "^0.96.0",
    "@effect/vitest": "^0.25.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^22.5.2",
    "@vitest/coverage-v8": "^4.0.3",
    "effect": "^3.17.7",
    "tsup": "^8.2.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^4.0.3"
  },
  "patchedDependencies": {
    "@changesets/get-github-info@0.6.0": "patches/@changesets__get-github-info@0.6.0.patch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0"
  }
}
